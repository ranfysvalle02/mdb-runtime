{
  "version": "2.0",
  "slug": "hello_world",
  "name": "Hello World App",
  "description": "A simple hello world example demonstrating MDB_RUNTIME with authentication and WebSockets",
  "status": "active",
  "developer_id": "developer@example.com",
  "auth_required": true,
  "auth_policy": {
    "required": true,
    "allow_anonymous": false
  },
  "sub_auth": {
    "enabled": false
  },
  "managed_indexes": {
    "greetings": [
      {
        "type": "regular",
        "keys": {"language": 1, "created_at": -1},
        "name": "language_created_idx",
        "options": {
        "background": true
        }
      }
    ]
  },
  "websockets": {
    "realtime": {
      "path": "/ws",
      "description": "Real-time updates for dashboard metrics and CRUD operations"
    }
  }
}

