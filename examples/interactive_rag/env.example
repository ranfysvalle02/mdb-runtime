# MongoDB Configuration
MONGO_URI=mongodb://admin:password@mongodb:27017/?authSource=admin
MONGO_DB_NAME=interactive_rag_db

# Azure OpenAI Configuration
# Set these values in your .env file (this is an example template)
# IMPORTANT: Endpoint can be provided with or without /openai/v1 - the code will normalize it
# Examples (both work):
#   https://innovation-hub.cognitiveservices.azure.com
#   https://innovation-hub.cognitiveservices.azure.com/openai/v1/
AZURE_OPENAI_ENDPOINT=https://innovation-hub.cognitiveservices.azure.com/openai/v1/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_MODEL_NAME=gpt-4o
# Optional: API version (defaults to latest if not specified)
# AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Alternative: Standard OpenAI (if not using Azure)
# OPENAI_API_KEY=your-openai-key-here

# Embedding Model (uses OpenAI or AzureOpenAI - same keys as above)

# Optional: Anthropic
# ANTHROPIC_API_KEY=your-anthropic-key-here

# URL Extraction (required)
FIRECRAWL_API_KEY=your-firecrawl-key-here

# Application Settings
APP_PORT=5001
LOG_LEVEL=INFO
