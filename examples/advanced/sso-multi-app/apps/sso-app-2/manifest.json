{
  "schema_version": "2.0",
  "slug": "flux",
  "name": "FLUX",
  "description": "Represents the constant change of the market (and your P&L)",
  "status": "active",
  "auth": {
    "mode": "shared",
    "auth_hub_url": "http://localhost:8000",
    "roles": ["base_user", "viewer", "editor", "admin"],
    "require_role": "base_user",
    "public_routes": ["/health", "/auth/callback", "/"]
  },
  "cors": {
    "enabled": true,
    "allow_origins": ["http://localhost:8000", "http://localhost:8001", "http://localhost:8002"],
    "allow_credentials": true,
    "allow_methods": ["*"],
    "allow_headers": ["*"]
  },
  "data_access": {
    "read_scopes": ["flux"],
    "write_scope": "flux"
  }
}
