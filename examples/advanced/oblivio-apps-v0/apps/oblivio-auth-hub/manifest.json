{
  "schema_version": "2.0",
  "slug": "oblivio-auth-hub",
  "name": "Oblivio Auth Hub",
  "description": "Central authentication hub managing users and roles for SSO apps",
  "status": "active",
  "auth": {
    "mode": "shared",
    "roles": ["viewer", "editor", "admin"],
    "default_role": "viewer",
    "require_role": "viewer",
    "public_routes": ["/health", "/login", "/register", "/api/public"],
    "users": {
      "enabled": true,
      "strategy": "app_users"
    }
  },
  "cors": {
    "enabled": true,
    "allow_origins": ["http://localhost:8000", "http://localhost:8001", "http://localhost:8002", "http://localhost:8003"],
    "allow_credentials": true,
    "allow_methods": ["*"],
    "allow_headers": ["*"]
  },
  "data_access": {
    "read_scopes": ["oblivio-auth-hub"],
    "write_scope": "oblivio-auth-hub"
  }
}
