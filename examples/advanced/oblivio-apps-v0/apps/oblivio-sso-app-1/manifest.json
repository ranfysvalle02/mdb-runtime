{
  "schema_version": "2.0",
  "slug": "oblivio-sso-app-1",
  "name": "Oblivio SSO App 1",
  "description": "SSO app 1 - Data viewing/listing",
  "status": "active",
  "auth": {
    "mode": "shared",
    "roles": ["viewer", "editor", "admin"],
    "require_role": "viewer",
    "public_routes": ["/health", "/auth/callback"]
  },
  "cors": {
    "enabled": true,
    "allow_origins": ["http://localhost:8000", "http://localhost:8001", "http://localhost:8002", "http://localhost:8003"],
    "allow_credentials": true,
    "allow_methods": ["*"],
    "allow_headers": ["*"]
  },
  "data_access": {
    "read_scopes": ["oblivio-sso-app-1"],
    "write_scope": "oblivio-sso-app-1"
  }
}
