{
  "schema_version": "2.0",
  "slug": "click_tracker",
  "name": "Click Tracker",
  "description": "Tracks user clicks with shared SSO authentication",
  "status": "active",
  "auth": {
    "mode": "shared",
    "related_apps": {
      "dashboard": "http://localhost:8001"
    },
    "roles": ["clicker", "tracker", "admin"],
    "public_routes": ["/", "/health", "/api", "/login", "/logout"],
    "users": {
      "enabled": true,
      "strategy": "app_users",
      "demo_users": [
        {
          "email": "alice@example.com",
          "password": "password123",
          "app_roles": {
            "click_tracker": ["admin"],
            "dashboard": ["admin"]
          }
        },
        {
          "email": "bob@example.com",
          "password": "password123",
          "app_roles": {
            "click_tracker": ["tracker"],
            "dashboard": ["tracker"]
          }
        },
        {
          "email": "charlie@example.com",
          "password": "password123",
          "app_roles": {
            "click_tracker": ["clicker"],
            "dashboard": ["clicker"]
          }
        }
      ],
      "demo_user_seed_strategy": "auto"
    }
  },
  "cors": {
    "enabled": true,
    "allow_origins": ["http://localhost:8000", "http://localhost:8001"],
    "allow_credentials": true,
    "allow_methods": ["*"],
    "allow_headers": ["*"]
  },
  "data_access": {
    "read_scopes": ["click_tracker"],
    "write_scope": "click_tracker"
  },
  "managed_indexes": {
    "clicks": [
      {"type": "regular", "name": "timestamp_idx", "keys": {"timestamp": -1}},
      {"type": "regular", "name": "user_id_idx", "keys": {"user_id": 1}}
    ]
  }
}
