[flake8]
max-line-length = 100
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    *.pyc,
    .venv,
    venv,
    build,
    dist,
    .eggs,
    *.egg-info
max-complexity = 20
# Enable specific error codes
# E722: do not use bare 'except' (enforced for exception handling best practices)
# Additional Grinberg framework rules are enforced by scripts/check_exception_handling.py
# See docs/guides/error_handling.md for the four error types framework
select = E,W,F,B,C,I
# Disable specific checks (if needed)
# ignore =
# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:D
    examples/*:D
